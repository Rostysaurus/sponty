<% if message.user == current_user %>
  <div id="message-<%= message.id%>" class="right message-box">
    <small>
      <strong><%= message.user.email %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p><%= message.content %></p>
  </div>
  <% else %>
    <div id="message-<%= message.id %>" class="left message-box">
    <small>
      <strong><%= message.user.email %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p><%= message.content %></p>
  </div>
<% end %>
