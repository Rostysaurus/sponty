
<div class="container">
  <div class="row justify-content-center gy-3">
      <div class="col col-12 card">
        <%= simple_form_for [@experience] do |f| %>
          <%= f.input :name, input_html: { autocomplete: 'off' } %>
          <%= f.input :event_type, input_html: { autocomplete: 'off' } %>
          <%= f.input :busyness, collection: ["busy", "semi-busy", "empty"] %>
          <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: "btn btn-primary"%>
        <% end %>
    </div>
  </div>
</div>
